<!DOCTYPE html>
{% block html_tag %}
<html lang="{{ app.request.locale }}">
{% endblock html_tag %}

{% block head %}
    <head>
        <meta charset="{{ _charset }}"/>
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <title>{% block title %}Newsletter ESIEA{% endblock title %}</title>

        <meta name="description" content="{% block description %}{% endblock description %}">
        <meta name="author" content="{% block author %}Tanguy GITON{% endblock author %}">

        {% block head_style %}

            {% block head_style_assetic %}
                {% stylesheets output='css/app.css'
                '@boostrap'
                '@font_awesome'
                '@simple_mde_css'
                'bundles/app/less/*' %}
                <link rel="stylesheet" href="{{ asset_url }}">
                {% endstylesheets %}
            {% endblock head_style_assetic %}
        {% endblock head_style %}


        {% block head_script %}

            <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
            <!--[if lt IE 9]>
            <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
            <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
            <![endif]-->
        {% endblock head_script %}

        {% block favicon %}
            <link rel="icon" href="{{ asset('favicon.ico') }}" />{% endblock %}

        {% block head_bottom %}
        {% endblock head_bottom %}
    </head>
{% endblock head %}

{% block body_tag %}
<body class="{{ app.request.get('_route') }}">
{% endblock body_tag %}

{% block body_start %}
{% endblock body_start %}

{% block body %}

